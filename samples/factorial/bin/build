#!/usr/bin/env sh

readonly current="$( cd "$(dirname "$0")" ; pwd -P )"
readonly root="$(realpath "$current/../../../")"

mkdir tmp
cp -r $root/src/ ./tmp/src/
cp -r $root/bin/ ./tmp/bin/
cp $root/*.js ./tmp/
cp $root/package.json ./tmp/
cp $root/yarn.lock ./tmp/

docker build -t sm-factorial .

rm -rf tmp
